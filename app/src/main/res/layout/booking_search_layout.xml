<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:backgroundTint="@color/white"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_margin="5dp"
    app:cardElevation="5dp"
    app:cardCornerRadius="6dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <TextView
            android:id="@+id/name_of_vehicle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Name"
            android:layout_margin="10dp"
            android:textSize="20sp"
            android:textColor="@color/black"
            android:textStyle="bold"
            />
        <TextView
            android:id="@+id/no_of_vehicle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="22903"
            android:layout_marginStart="10dp"
            android:textSize="15sp"
            android:textColor="@color/black"
            />
        <LinearLayout
            android:layout_marginBottom="20dp"
            android:layout_marginTop="20dp"

            android:layout_width="match_parent"
            android:layout_marginStart="5dp"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

          <LinearLayout
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:layout_marginStart="5dp"
              android:orientation="vertical">
              <TextView
                  android:textColor="@color/black"
                  android:id="@+id/starting_travel_time"
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:text="16:04"
                  android:textSize="20sp"
                  android:textStyle="bold"/>
              <TextView

                  android:id="@+id/starting_travel_place"
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:text="kolkata"
                  android:layout_gravity="center"
                  android:textSize="12sp"

                  />
          </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <TextView
                    android:textColor="@color/black"
                    android:id="@+id/total_time_taken_travel"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="2h 40m"
                    android:textSize="10sp"
                    android:layout_gravity="center"
                    android:layout_marginStart="40dp"
                    android:layout_marginEnd="40dp"/>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="10dp"
                    android:layout_marginStart="30dp"
                    android:layout_marginEnd="30dp"
                    android:background="@drawable/green_thick_line" />

            </LinearLayout>
            <LinearLayout

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="5dp"
                android:orientation="vertical">
                <TextView
                    android:textColor="@color/black"

                    android:id="@+id/ending_travel_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="16:04"
                    android:textSize="20sp"
                    android:textStyle="bold"/>
                <TextView
                    android:id="@+id/ending_travel_place"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="kolkata"
                    android:layout_gravity="center"
                    android:textSize="10sp"

                    />
            </LinearLayout>
        </LinearLayout>
       <androidx.recyclerview.widget.RecyclerView
           android:id="@+id/fare_list_rv"
           android:layout_width="match_parent"
           android:layout_height="wrap_content"/>
    </LinearLayout>

</androidx.cardview.widget.CardView>