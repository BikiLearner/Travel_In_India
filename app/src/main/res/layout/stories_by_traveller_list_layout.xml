<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="200dp"
    android:layout_height="wrap_content"
    android:layout_margin="5dp"
    app:cardCornerRadius="20dp"
    app:cardElevation="5dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <LinearLayout
        android:background="@color/white"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:cardCornerRadius="20dp"
        android:elevation="5dp"
        app:cardElevation="5dp"
        android:orientation="vertical">
       <RelativeLayout
           android:layout_width="wrap_content"
           android:layout_height="wrap_content">
           <TextView
               android:layout_width="match_parent"
               android:layout_height="200dp"
               android:gravity="center"
               android:text="No \nImage"
               android:textSize="20sp"
               android:textStyle="bold" />

           <ImageView
               android:id="@+id/show_stories_by_traveller_img"
               android:layout_width="match_parent"
               android:layout_height="200dp"
               android:scaleType="fitXY"/>
           <ImageView
               android:id="@+id/story_video"
               android:layout_width="match_parent"
               android:layout_height="230dp"
               android:scaleType="fitXY"
               />
       </RelativeLayout>

    <TextView
        android:layout_marginStart="5dp"
        android:id="@+id/title_of_story"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:text="Just In"
        android:textAllCaps="true"
        android:textSize="15sp"
        android:textStyle="bold"
        android:textColor="@color/navy_blue"
        android:layout_gravity="start"
        android:background="@drawable/gradient_backgrount_story_title"
        />

    <TextView
        android:layout_marginStart="5dp"
        android:id="@+id/description_of_the_story"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:text="In sharjah"
        android:textSize="15sp"
        android:textStyle="bold"
        android:textColor="@color/black"
        android:layout_gravity="start"

        android:gravity="center"/>
        <TextView
            android:id="@+id/name_of_creator"
            android:layout_marginStart="5dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:textColor="#959393"
            android:text="9h ago "
            android:textSize="14sp"
            android:layout_gravity="start"/>
    <TextView
        android:layout_marginStart="5dp"
        android:id="@+id/time_passed"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:textColor="#959393"
        android:text="9h ago "
        android:textSize="10sp"
        android:layout_gravity="start"
        android:layout_marginBottom="7dp"/>
    </LinearLayout>
</androidx.cardview.widget.CardView>